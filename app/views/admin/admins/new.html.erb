<%= form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f| %>
<h3 class="form-signin-heading">Вход в программу</h3>
  <%= f.text_field :login, :class => 'input-block-level', :placeholder => 'Login'  %>
  <%= f.password_field :password, :class => 'input-block-level', :placeholder => 'Пароль' %>
  
  <label class="checkbox"><%= f.check_box :remember_me, :type => 'checkbox' %>
  запомнить меня
  </label>
  
  <%= f.button "Войти" ,:class => 'btn btn-large btn-primary', :type => 'submit' %>
<% end %>